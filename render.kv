#:kivy 1.0.9

<RenderGUI>:
    canvas:
        Rectangle:
            id: bg_rect
            pos: (0,0)
            texture: root.texture
            size: root.texture_size

    ToggleButton:
        id: showhelp
        pos: (10, root.height - 40)
        size: (88, 30)
        text: 'Hide help' if self.state == 'down' else 'Show help'

    Label:
        font_size: 15
        center_x: 110
        top: root.height - 70
        valign: 'top'
        text: root.helptext if showhelp.state == 'down' else ""


################## settings

    Label:
        font_size: 17
        pos: (13, 22)
        text: root.data_str
        halign: 'right'

    MagicCB:
        id: opacityset
        pos: (132, 114)
        size: (20, 20)
        checkbox_active: lambda cb, value: root.update_value('rend_opacity', value)

    NumberSetter:
        id: altitudein
        pos: (122, 93)
        size: (70, 20)
        text: "%.2f" % root.altitude
        sonfocus: lambda value: root.update_value('altitude', float(self.text)) if not value else None

    NumberSetter:
        id: azimuthin
        pos: (122, 72)
        size: (70, 20)
        text: "%.2f" % root.azimuth
        sonfocus: lambda value: root.update_value('azimuth', float(self.text)) if not value else None

    NumberSetter:
        id: dppin
        pos: (122, 51)
        size: (70, 20)
        text: "%.4f" % root.distance_per_pixel
        sonfocus: lambda value: root.update_value('distance_per_pixel', float(self.text)) if not value else None

    NumberSetter:
        id: stepsizein
        pos: (122, 30)
        size: (70, 20)
        text: "%.4f" % root.stepsize
        sonfocus: lambda value: root.update_value('stepsize', float(self.text)) if not value else None

    NumberSetter:
        id: logoffsetin
        pos: (122, 9)
        size: (70, 20)
        text: "%.4f" % root.log_offset
        sonfocus: lambda value: root.update_value('log_offset', float(self.text)) if not value else None
